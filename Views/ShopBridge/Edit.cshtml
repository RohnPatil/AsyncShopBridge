@model AsyncShopBridge.Models.ShopItem

@{
    ViewBag.Title = "Edit Product|ShopBridge";
}

<h2>Edit Product Details</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
